<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_numbers_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/about_degradado"
    tools:context="mx.edu.utng.primaria.NumbersWrite">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice the operations"
        android:textSize="14pt"
        android:textColor="@color/red"
        android:id="@+id/tv_titulo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: five + two ="
        android:layout_below="@id/tv_titulo"
        android:id="@+id/tv_seven"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_seven"
        android:layout_below="@+id/tv_seven"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: one + four ="
        android:layout_below="@id/et_seven"
        android:id="@+id/tv_five"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_five"
        android:layout_below="@+id/tv_five"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: trhee + trhee ="
        android:layout_below="@id/et_five"
        android:id="@+id/tv_six"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_six"
        android:layout_below="@+id/tv_six"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: one + one ="
        android:layout_below="@id/et_six"
        android:id="@+id/tv_two"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_two"
        android:layout_below="@+id/tv_two"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: four + five ="
        android:layout_below="@id/et_two"
        android:id="@+id/tv_nine"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_nine"
        android:layout_below="@+id/tv_nine"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: six + four ="
        android:layout_below="@id/et_nine"
        android:id="@+id/tv_ten"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_ten"
        android:layout_below="@+id/tv_ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: ten - four ="
        android:layout_below="@id/et_ten"
        android:id="@+id/tv__menos_six"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_menos_six"
        android:layout_below="@+id/tv__menos_six"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The result of: Eight - seven ="
        android:layout_below="@id/et_menos_six"
        android:id="@+id/tv__menos_one"
        android:textSize="12pt"
        android:textColor="@color/blue"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="Result"
        android:id="@+id/et_menos_one"
        android:layout_below="@+id/tv__menos_one"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="The result of: Seven - Two ="
         android:layout_below="@id/et_menos_one"
         android:id="@+id/tv__menos_five"
         android:textSize="12pt"
         android:textColor="@color/blue" />
     <EditText
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:inputType="text"
         android:gravity="center"
         android:hint="Result"
         android:id="@+id/et_menos_five"
         android:layout_below="@+id/tv__menos_five"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:layout_below="@+id/et_menos_five"
                android:id="@+id/bt_review"
                android:textColor="@color/red"
                android:background="@android:color/transparent"/>


            </RelativeLayout>
    </ScrollView>


</RelativeLayout>
