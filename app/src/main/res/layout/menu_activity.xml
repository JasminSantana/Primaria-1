<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main"
    tools:context=".menu.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical"
            android:layout_marginTop="55dp">

            <GridLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">



                <ImageButton
                    android:id="@+id/ib_activity_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_circle"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_one"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_al_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:layout_gravity="center"
                    android:textColor="#797E7F"
                    android:textStyle="bold"
                    android:paddingBottom="45dp"/>

                <ImageButton
                    android:id="@+id/ib_activity_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/activity_two"
                    android:background="@drawable/button_unactivated"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_an_co"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="center"
                    android:textColor="#797E7F"
                    android:textStyle="bold"
                    android:paddingBottom="45dp"/>

                <ImageButton
                    android:id="@+id/ib_activity_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/activity_three"
                    android:background="@drawable/button_unactivated"
                    android:layout_column="5"
                    android:layout_row="3"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_fa_ro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="4"
                    android:layout_gravity="center"
                    android:textColor="#797E7F"
                    android:textStyle="bold"
                    android:paddingBottom="45dp"/>

                <ImageButton
                    android:id="@+id/ib_activity_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/activity_four"
                    android:background="@drawable/button_unactivated"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_fg_de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:layout_gravity="center"
                    android:textColor="#797E7F"
                    android:textStyle="bold"
                    android:paddingBottom="45dp"/>


                <ImageButton
                    android:id="@+id/ib_activity_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/activity_four"
                    android:background="@drawable/button_unactivated"
                    android:layout_column="5"
                    android:layout_row="6"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_ob_ca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="7"
                    android:layout_gravity="center"
                    android:textColor="#797E7F"
                    android:textStyle="bold"
                    android:paddingBottom="45dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="@string/certificate"
                    android:layout_column="4"
                    android:layout_row="10"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_certificate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_unactivated"
                    android:src="@drawable/certificate"
                    android:layout_column="4"
                    android:layout_row="9"
                    android:layout_gravity="center"/>

            </GridLayout>


        </ScrollView>

</LinearLayout>