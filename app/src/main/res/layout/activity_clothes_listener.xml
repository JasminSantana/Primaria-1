<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="11"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_1"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#CA465E"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginRight="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">

                    <ImageView
                        android:id="@+id/iv_group_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/what"
                        android:padding="20dp"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/tv_group1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9pt"
                        android:text="@string/what_is"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/iv_group_1" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_2"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#26BA9A"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginRight="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="230dp">

            <ImageView
                android:id="@+id/iv_group_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/what"
                android:padding="20dp"/>

                <TextView
                    android:id="@+id/tv_group2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9pt"
                    android:text="@string/what_is"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_group_2" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_3"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F0C419"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginRight="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">

                    <ImageView
                        android:id="@+id/iv_group_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/what"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/tv_group3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9pt"
                        android:text="@string/what_is"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/iv_group_3" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_4"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#FF5733"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginRight="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">

                    <ImageView
                        android:id="@+id/iv_group_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/what"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/tv_group4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9pt"
                        android:text="@string/what_is"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/iv_group_4" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_5"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F39B1E"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginRight="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">

                    <ImageView
                        android:id="@+id/iv_group_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/what"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/tv_group5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9pt"
                        android:text="@string/what_is"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/iv_group_5" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_6"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#D35628"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginRight="3dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">

                    <ImageView
                        android:id="@+id/iv_group_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/what"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/tv_group6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9pt"
                        android:text="@string/what_is"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/iv_group_6" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </GridLayout>

    </ScrollView>

</LinearLayout>



