<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_color_black"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/minions_yellow"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_color_black"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="THE MINIONS IS COLOR ____?"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_color"
                        android:layout_toRightOf="@id/iv_color_black"
                        android:layout_below="@id/tv_question"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PINK"
                            android:id="@+id/rb_pink"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YELLOW"
                            android:id="@+id/rb_color_yellow"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLACK"
                            android:id="@+id/rb_black"
                            android:layout_marginBottom="7dp"/>
                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_color_brown"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/dog_brown"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/tv_question2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_color_brown"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="The dog is color _____?"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_color_brown"
                        android:layout_toRightOf="@id/iv_color_brown"
                        android:layout_below="@id/tv_question2"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BROWN"
                            android:id="@+id/rb_color_brown"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WHITE"
                            android:id="@+id/rb_red"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLUE"
                            android:id="@+id/rb_green"
                            android:layout_marginBottom="7dp"/>
                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_color_red"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/jacket_red"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/tv_question3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_color_red"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="Write the color of the jacket"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                   <EditText
                       android:id="@+id/et_color_red"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_below="@id/tv_question3"
                       android:layout_toRightOf="@id/iv_color_red"
                       android:layout_marginTop="25dp"
                       android:inputType="text"
                       android:maxLength="3"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_color_blue"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/dress_blue"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_color_blue"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="The dress is color _____?"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_color_blue"
                        android:layout_toRightOf="@id/iv_color_blue"
                        android:layout_below="@id/tv_question4"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WHITE"
                            android:id="@+id/rb_white1"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PURPLE"
                            android:id="@+id/rb_purple"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLUE"
                            android:id="@+id/rb_color_blue"
                            android:layout_marginBottom="7dp"/>
                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_color_green"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/tree_green"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_color_green"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="Write the color of the tree"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/et_color_green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_question5"
                        android:layout_toRightOf="@id/iv_color_green"
                        android:layout_marginTop="25dp"
                        android:inputType="text"
                        android:maxLength="5"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_animal_monkey"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/monkey_pregunta"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_animal_monkey"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="Write the animal that you see"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/et_animal_monkey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_question6"
                        android:layout_toRightOf="@id/iv_animal_monkey"
                        android:layout_marginTop="25dp"
                        android:inputType="text"
                        android:maxLength="5"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_animal_bee"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/beep"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_animal_bee"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="Write the animal that you see"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/et_animal_bee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_question7"
                        android:layout_toRightOf="@id/iv_animal_bee"
                        android:layout_marginTop="25dp"
                        android:inputType="text"
                        android:maxLength="5"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_animal_rabbit"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/rabbitpregunta"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_animal_rabbit"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="WHAT IS THE ANIMAL NAME THAT YOU SEE?"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_animal"
                        android:layout_toRightOf="@id/iv_animal_rabbit"
                        android:layout_below="@id/tv_question8"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIG"
                            android:id="@+id/rb_animal_pig"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DUCK"
                            android:id="@+id/rb_animal_duck"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RABBIT"
                            android:id="@+id/rb_animal_rabbit"
                            android:layout_marginBottom="7dp"/>
                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/holo_red_light"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_animal_sheep"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/borregapregunta"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_animal_sheep"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="Write the animal that you see"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/et_animal_sheep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_question9"
                        android:layout_toRightOf="@id/iv_animal_sheep"
                        android:layout_marginTop="25dp"
                        android:inputType="text"
                        android:maxLength="5"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_animal_butherfly"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/butherfly"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_question10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_animal_butherfly"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="WHAT IS THE ANIMAL NAME THAT YOU SEE?"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_animal2"
                        android:layout_toRightOf="@id/iv_animal_butherfly"
                        android:layout_below="@id/tv_question10"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HORSE"
                            android:id="@+id/rb_animal_horse"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUTHERFLY"
                            android:id="@+id/rb_animal_buthetfly"
                            android:layout_marginBottom="7dp"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EAGLE"
                            android:id="@+id/rb_animal_eagle"/>


                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/iv_send_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send_button"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>