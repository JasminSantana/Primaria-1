<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_alphabet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/degradado_guindo"
    tools:context="mx.edu.utng.primaria.activities.test.TestAlphabet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test of Alphabet and Numbers"
        android:id="@+id/tv_alphabet"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#11f7cd"
        android:fontFamily="monospace"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What letter is?"
                        android:id="@+id/tv_bi"
                        android:textSize="18dp"
                        android:textColor="#0604a1" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/b"
                        android:id="@+id/iv_bi"
                        android:layout_toRightOf="@+id/tv_bi" />
                    <RadioGroup
                        android:id="@+id/rdgGrupo"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_bi"
                        android:layout_marginBottom="10dp"
                        android:background="@color/cardview_light_background"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EF"
                            android:id="@+id/rb_ef"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/rdgGrupo"
                            android:layout_toEndOf="@+id/rdgGrupo" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EM"
                            android:id="@+id/rb_em"
                            android:layout_alignTop="@+id/iv_bi"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BI"
                            android:id="@+id/rb_bi"
                            android:layout_below="@+id/iv_bi"
                            />
                    </RadioGroup>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/cv_data2"
            android:layout_below="@id/cv_data"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the name of the letter *Z*?"
                android:id="@+id/tv_z"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rdgDos"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_z"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZI"
                    android:id="@+id/rb_zi"
                    android:layout_below="@+id/tv_z"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CI"
                    android:id="@+id/rb_ci"
                    android:layout_below="@+id/tv_z"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARR"
                    android:id="@+id/rb_arr"
                    android:layout_below="@+id/tv_z"

                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:id="@+id/cv_data3"
            android:layout_below="@id/cv_data2"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What letter is *EM* ?"
                android:id="@+id/tv_eme"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/rdgTres"
                android:layout_below="@+id/tv_eme">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_err"
                    android:layout_below="@+id/tv_eme"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/r"
                    android:id="@+id/iv_r"
                    android:layout_below="@+id/tv_eme"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_es"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/s"
                    android:id="@+id/iv_s"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_m"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/m"
                    android:id="@+id/iv_m"
                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:id="@+id/cv_data4"
            android:layout_below="@id/cv_data3"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What letter is ?"
                android:id="@+id/tv_gii"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/g"
                android:id="@+id/iv_g"
                android:layout_toRightOf="@+id/tv_gii"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgCuatro"
                android:layout_below="@+id/tv_gii"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LLEI"
                    android:id="@+id/rb_llei"
                    android:layout_below="@id/tv_gii"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEI"
                    android:id="@+id/rb_kei"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GII"
                    android:id="@+id/rb_gii"
                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/cv_data5"
            android:layout_below="@id/cv_data4"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Listen and select answer"
                android:id="@+id/tv_listening"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bocina"
                android:id="@+id/bt_pi"
                android:backgroundTint="#fdcf05"
                android:layout_toRightOf="@id/tv_listening"
                 />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgCinco"
                android:layout_below="@+id/tv_listening"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/rb_letter_a"
                    android:layout_below="@id/tv_em"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z"
                    android:id="@+id/rb_letter_z"
                    android:layout_above="@+id/tv_mother"
                    android:layout_toRightOf="@+id/ch_green"
                    android:layout_toEndOf="@+id/ch_green" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:id="@+id/rb_letter_p"
                    android:layout_below="@+id/tv_pi"
                    />

            </RadioGroup>

        </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data6"
                android:layout_below="@id/cv_data5"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" How much is three plus/+ two"
                        android:id="@+id/tv_five"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdgsix"
                        android:layout_below="@+id/tv_five"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One"
                            android:layout_below="@id/tv_five"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Five"
                            android:id="@+id/rb_number_five"
                             />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Two"
                            android:id="@+id/rb_number_two"

                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data7"
                android:layout_below="@id/cv_data6"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" How much is One plus/+ trhee"
                        android:id="@+id/tv_four"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdgseven"
                        android:layout_below="@+id/tv_four"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Six"
                            android:layout_below="@id/tv_four"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eigth"
                            android:id="@+id/rb_number_eigth"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Four"
                            android:id="@+id/rb_number_four"

                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data8"
                android:layout_below="@id/cv_data7"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" How many is Ten less/- Four"
                        android:id="@+id/tv_six"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_six"
                        android:layout_below="@+id/tv_six"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Six"
                            android:id="@+id/rb_number_six"
                            android:layout_below="@id/tv_four"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ten"
                            android:id="@+id/rb_number_ten"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seven"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data9"
                android:layout_below="@id/cv_data8"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" How many is Eight less/- One"
                        android:id="@+id/tv_seven"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_seven"
                        android:layout_below="@+id/tv_seven"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nine"
                            android:layout_below="@id/tv_seven"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seven"
                            android:id="@+id/rb_number_seven"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data10"
                android:layout_below="@id/cv_data9"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" How many is Two less/- One"
                        android:id="@+id/tv_one"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_nine"
                        android:layout_below="@+id/tv_one"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eigth"
                            android:layout_below="@id/tv_one"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One"
                            android:id="@+id/rb_number_one"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Four"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar/Send"
                android:id="@+id/bt_enviar"
                android:textColor="@color/white"
                android:background="@drawable/button_login_form"
                android:layout_below="@id/cv_data10"
                />


        </RelativeLayout>

    </ScrollView>


</LinearLayout>
