<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="11"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_group_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/iv_group_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/iv_group_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/iv_group_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/iv_group_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

            <ImageView
                android:id="@+id/iv_group_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/what"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"/>

        </GridLayout>

    </ScrollView>

</LinearLayout>



